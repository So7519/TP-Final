{% extends 'base.html.twig' %}

{% block title %}{{ product.nom }}{% endblock %}

{% block body %}
    <div class="product-detail">
        <div class="product-detail-container">
            <div class="product-detail-image">
                {% if product.image %}
                    <img src="{{ product.image }}" alt="{{ product.nom }}" />
                {% else %}
                    <div class="product-image-placeholder">Pas d'image</div>
                {% endif %}
            </div>

            <div class="product-detail-info">
                <h1>{{ product.nom }}</h1>
                
                <div class="product-detail-price">
                    {{ (product.prix / 100)|number_format(2, ',', ' ') }} €
                </div>

                <div class="product-detail-description">
                    <h3>Description</h3>
                    <p>{{ product.description }}</p>
                </div>

                <div class="product-detail-actions">
                    <a href="{{ path('app_product_index') }}" class="btn-secondary">← Retour à la liste</a>
                    <a href="{{ path('app_contact') }}" class="btn-primary">Faire une Demande</a>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
