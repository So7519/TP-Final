{% extends 'base.html.twig' %}

{% block title %}Formulaire de Contact{% endblock %}

{% block body %}
<div class="contact-container">
    <div class="contact-form-wrapper">
        <h1>Nous Contacter</h1>
        
        {% if app.flashes('success') %}
            <div class="alert alert-success">
                {% for message in app.flashes('success') %}
                    {{ message }}
                {% endfor %}
            </div>
        {% endif %}

        <p class="contact-intro">Avez-vous des questions ? Remplissez le formulaire ci-dessous et nous vous répondrons dans les plus brefs délais.</p>

        {{ form_start(form) }}
            <div class="form-group">
                {{ form_label(form.nom) }}
                {{ form_widget(form.nom) }}
                {{ form_errors(form.nom) }}
            </div>

            <div class="form-group">
                {{ form_label(form.email) }}
                {{ form_widget(form.email) }}
                {{ form_errors(form.email) }}
            </div>

            <div class="form-group">
                {{ form_label(form.sujet) }}
                {{ form_widget(form.sujet) }}
                {{ form_errors(form.sujet) }}
            </div>

            <div class="form-group">
                {{ form_label(form.message) }}
                {{ form_widget(form.message) }}
                {{ form_errors(form.message) }}
            </div>

            <div class="form-actions">
                {{ form_widget(form.Envoyer) }}
                <a href="{{ path('app_home') }}" class="btn-secondary">Annuler</a>
            </div>
        {{ form_end(form) }}
    </div>
</div>
{% endblock %}
