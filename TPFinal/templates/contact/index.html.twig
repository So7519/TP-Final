{% extends 'base.html.twig' %}

{% block title %}Formulaire de Contact{% endblock %}

{% block body %}
<div class="contact-page">
    <div class="contact-wrapper">
        <div class="contact-header">
            <h1>Nous Contacter</h1>
            <p class="contact-subtitle">Avez-vous des questions ? Remplissez le formulaire ci-dessous et nous vous répondrons rapidement.</p>
        </div>

        {% if app.flashes('success') %}
            <div class="alert alert-success">
                {% for message in app.flashes('success') %}
                    ✓ {{ message }}
                {% endfor %}
            </div>
        {% endif %}

        <div class="contact-form-container">
            {{ form_start(form, {'attr': {'class': 'contact-form'}}) }}
                <div class="form-group">
                    {{ form_label(form.nom) }}
                    {{ form_widget(form.nom) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.email) }}
                    {{ form_widget(form.email) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.sujet) }}
                    {{ form_widget(form.sujet) }}
                </div>

                <div class="form-group">
                    {{ form_label(form.message) }}
                    {{ form_widget(form.message) }}
                </div>

                <div class="form-actions">
                    {{ form_widget(form.Envoyer) }}
                    <a href="{{ path('app_home') }}" class="btn btn-secondary">Annuler</a>
                </div>
            {{ form_end(form) }}
        </div>
    </div>
</div>
{% endblock %}
